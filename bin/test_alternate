#!/usr/bin/env python
import sys
import os

def python_alternate(name, ext):
    if "_test" in name:
        return name.replace("_test","") + ext
    return name + "_test" + ext

file = sys.argv[1]
filename, file_extension = os.path.splitext(file)


if file_extension == ".py":
    print(python_alternate(filename, file_extension))




